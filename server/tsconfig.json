{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "config/**/*.ts"
  ]
}
